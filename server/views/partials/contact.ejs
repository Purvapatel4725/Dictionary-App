<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container" style="background-color: black; color: white;">
    <div class="row justify-content-center mb-5">
        <div class="col-lg-8 mt-5">
            <div class="card shadow-lg p-4" style="background-color: #0f4c75;">
                <form id="contactForm" method="post">
                    <h2 class="card-title text-center mb-4" style="color: white;">Contact Me</h2>
                    <div class="form-group mb-3">
                        <label for="fullNameInput" style="color: white;">Full Name:</label>
                        <input id="fullNameInput" class="form-control" type="text" placeholder="Full Name" name="Full Name" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="mobileInput" style="color: white;">Mobile Number:</label>
                        <input id="mobileInput" class="form-control" type="tel" placeholder="Mobile Number" maxlength="10" name="Phone Number" pattern="[0-9]{10}" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="emailInput" style="color: white;">Email:</label>
                        <input id="emailInput" class="form-control" type="email" placeholder="Email" name="email address" required>
                    </div>
                    <div class="form-group mb-3">
                        <label for="messageTextarea" style="color: white;">Message:</label>
                        <textarea id="messageTextarea" class="form-control" type="text" rows="10" placeholder="Message" name="Custom message" required></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-light" type="submit" style="background-color: grey; color: white; font-family: 'Cinzel Decorative', sans-serif; width: 100%;">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>



<style>
    /* CSS from the previous design */
    input, textarea{
        background-color: black !important;
    }
    .form-control::placeholder{
        color: #0f4c75;
    }
    body{
        background-color: black;
    }
    #wordTextField::placeholder,
    #meaningTextArea::placeholder,
    #examplesTextArea::placeholder, label {
        font-family: 'Cinzel Decorative', sans-serif;
        color: #0f4c75;
    }

    .card {
        border-radius: 15px;
    }

    .btn {
        border-radius: 8px;
    }
    #examplesTextArea, #messageTextArea, #wordTextField{
        color: white;
font-family: 'Cinzel Decorative', sans-serif;
    }
    .form-group{
        font-family: 'Cinzel Decorative', sans-serif;
    }
    #emailInput, #messageTextarea, #mobileInput, #fullNameInput{
        color: white;
    }
</style>





<script>
    const form = document.getElementById('contactForm');

    form.addEventListener('submit', function(event) {
        event.preventDefault(); // Prevent the form from submitting by default
        
        // Perform validation here (e.g., check if fields are not empty or meet certain criteria)
        const fullName = document.getElementById('fullNameInput').value;
        const mobileNumber = document.getElementById('mobileInput').value;
        const email = document.getElementById('emailInput').value;
        const message = document.getElementById('messageTextarea').value;

        if (fullName.trim() === '' || mobileNumber.trim() === '' || email.trim() === '' || message.trim() === '') {
            // If any field is empty, display an error message or perform any action you'd like
            alert('Please fill in all fields.');
            return;
        }

        // You can add more complex validation logic here

        // If all validation passes, you can perform any action (e.g., alert success or redirect)
        alert('Your message was sent successfully!');
        // You can also perform actions like redirecting to another page:
        // window.location.href = '/success_page';
    });
</script>
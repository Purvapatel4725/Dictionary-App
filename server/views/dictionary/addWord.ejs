<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<main class="container pb-5" style="background-color: black; color: white;">
    <div class="row justify-content-center">
        <div class="col-lg-8 mt-5">
            <div class="card shadow-lg p-4" style="background-color: #0f4c75; color: black;">
                <h1 class="card-title text-center mb-4">Add New Word</h1>
                <form method="POST" action="/dictionary/addWord">
                    <div class="mb-3">
                        <label for="word" class="form-label" style="color: white; font-family: 'Cinzel Decorative', sans-serif;">Word:</label>
                        <input type="text" class="form-control" id="word" placeholder="Enter the word" name="word" required>
                    </div>
                    <div class="mb-3">
                        <label for="meaning" class="form-label" style="color: white; font-family: 'Cinzel Decorative', sans-serif;">Meaning:</label>
                        <textarea class="form-control" id="meaning" placeholder="Enter the meaning" name="meaning" style="height: 150px;"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="examples" class="form-label" style="color: white; font-family: 'Cinzel Decorative', sans-serif;">Examples:</label>
                        <textarea class="form-control" id="examples" placeholder="Enter examples" name="examples"  style="height: 150px;"></textarea>
                    </div>
                    <div class="d-grid gap-2">
                        <button class="btn btn-light" type="submit" style="background-color: grey; color: white; font-family: 'Cinzel Decorative', sans-serif;">
                            <i class="fas fa-plus"></i> Add Word
                        </button>
                        <button class="btn btn-light" type="button" style="background-color: grey; color: white; font-family: 'Cinzel Decorative', sans-serif;" onclick="cancelAddWord()">
                            <i class="fas fa-times-circle"></i> Cancel
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %>

<style>
    input, textarea{
        background-color: black !important;
    }
    body {
        background-color: black;
    }
    #word::placeholder,
    #meaning::placeholder,
    #examples::placeholder {
        color: white;
    }

    .card {
        border-radius: 15px;
    }

    .btn {
        border-radius: 8px;
    }
    .form-control::placeholder{
        color: #0f4c75 !important;
        font-family: 'Cinzel Decorative', sans-serif !important;
    }
    #meaning, #examples, #word{
        color: white !important;
        font-family: 'Cinzel Decorative', sans-serif !important;
    }
</style>
<script>
    function cancelAddWord() {
        // Redirect or perform any cancel action here
        window.location.href = "/dictionary/wordList"; // Redirect to the homepage as an example
    }
</script>

